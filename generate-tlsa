#!/bin/bash

function finish()
{
	local RETVAL=$?
	[ $RETVAL = 0 ] || echo -e "\e[1;31m${0##*/} failed: $RETVAL\e[0m"
}

trap finish EXIT

PATH="/var/named/bin:/usr/bin:/usr/sbin"
SUFFIX="tlsa.inc"

set -o errexit	# set -e
set -o nounset	# set -u

renice --priority 19 --pid $$ > /dev/null
ionice --class 3     --pid $$ > /dev/null

shopt -s nullglob

cd /var/named

[ $# = 0 ] && exit 2

echo -e "\e[1;32mGenerate TLSA Records for Services\e[0m"
for ZONE in $@; do
	FILE="$ZONE.$SUFFIX"
	if [ -f "$FILE" ]; then
		echo -e "\t\e[1;33m$ZONE already exists\e[0m"
		continue
	fi

	OUT=()
	for PORT in $DNSSEC_PORTS; do
		OUT+=("$(danetool --load-certificate /etc/pki/tls/$ZONE.crt --proto tcp --port $PORT --host $ZONE --tlsa-rr)")
	done

	(
		echo '; TLSA records for services'
		printf "%s\n" "${OUT[@]}"
	) > "$FILE"

	echo -e "\t$ZONE: $DNSSEC_PORTS"
done

exit 0

